<% layout("/layouts/boilerplate") %>
<body>
  <form action="/signup" method = "POST">
    <div class = "login-container">
      <h2 style="text-align: center; margin-bottom:1rem; text-decoration:overline red;">Welcome to <span style="font-weight: 700;">Edu<span style="color: red;">X</span></span></h2>
      <div class = "mb-3">
        <label for="username" class = "form-label">Username</label>
        <input name = "username" id = "username" class = "form-control" type="text" placeholder="username" required>
      </div>
      <div class = "mb-3">
        <label for="email" class = "form-label">Email</label>
        <input name = "email" id = "email" class = "form-control" type="email" placeholder = "email" required>
      </div>
      <div class = "mb-3">
        <label for="password" class = "form-label">Password</label>
        <input name = "password" id = "password" class = "form-control" type="password" placeholder = "password" required>
      </div>
      <div class = "login-btn">
        <button type="submit" class="btn btn-primary">Signup</button>
        <a href="/" class = "skipLogin">Skip</a>
      </div>            
    </div>
  </form>
</body>